{
  "version": "0.14.0",
  "name": "@decentralchain/marshall",
  "description": "Serialize and parse DecentralChain blockchain data structures",
  "keywords": [
    "decentralchain",
    "dcc",
    "blockchain",
    "serialization",
    "marshalling",
    "binary",
    "parser"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=24"
  },
  "repository": "https://github.com/33imattei33/marshall",
  "scripts": {
    "test": "jest",
    "build": "tsup",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "bulletproof": "npm run format && npm run lint:fix && npm run typecheck && npm test",
    "bulletproof:check": "npm run format:check && npm run lint && npm run typecheck && npm test",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "files": [
    "/src",
    "/dist"
  ],
  "author": "DCC",
  "contributors": [
    {
      "name": "Sergey B",
      "email": "siemarell@gmail.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.15",
    "bignumber.js": "^8.0.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "@types/long": "^4.0.0",
    "base64-js": "^1.3.0",
    "long": "^4.0.0"
  }
}
