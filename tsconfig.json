{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "long", "base64-js"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
