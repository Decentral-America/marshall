{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
